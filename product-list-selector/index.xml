<Module>
    <ModulePrefs title="ListSelector" height="250">
        <Require feature="pubsub-2"/>
        <Require feature="dynamic-height"/>
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <head>
           
            <link rel="stylesheet" href="css/jquery-ui.css" type="text/css">
            <link rel="stylesheet" href="css/style.css" type="text/css">
            <script language="javascript" type="text/javascript" src="/portal/js/jquery-1.10.2.js"></script>
            <script src="js/jquery-ui.js"></script>
            <script language="javascript" type="text/javascript" src="js/product-selector.js"></script>
            
        <head>
        <body>
            <div>
                <table >
                        <tr>
                            <th align="left">Product:</th>
                        </tr><tr>
                            <th align="left">
                          <select id="productList" ></select>
                          </th>
                        </tr>
                        <tr>
                            <th align="left">
                           <p> From:</p>
                        </th>
                        </tr>
                         <tr>
                            <th align="left">
                           <p>  <input type="text" id="datepicker_from"></p>
                        </th>
                        </tr>

                        <tr>
                            <th align="left">
                            <p>To: </p>
                        </th>
                        </tr>
                        <tr>
                            <th align="left">
                            <p><input type="text" id="datepicker_to"></p>
                        </th>
                        </tr>
                        <tr>
                            <th align="left">
                             <button id="button" onclick="buttonClick()">Refresh</button>
                         </th>
                        </tr>

                </table>
            </div>

        </body>
        ]]>
    </Content>
</Module>
